$header-bg = #000

.main-header
    position fixed
    top 0
    bottom 0
    left 0
    z-index 1000
    display flex
    border-right 1px solid $brand-primary
    background-color $header-bg

    &:hover,
    &:focus
        .main-header__nav-item
            &-text
                max-width 100px
                max-height 100px


    &__nav
        display flex
        flex-direction column
        justify-content center

        &-item
            display flex
            flex-direction column
            align-items center
            padding 10px
            color #fff
            text-decoration none
            font-size 12px
            text-transform uppercase
            letter-spacing 0
            transition color $time-md

            .icon
                fill #fff
                transform scale(1)
                transition all $time-md

            &:hover,
            &:focus
                text-decoration none

            &.active
                color $brand-primary

                .icon
                    fill $brand-primary
                    transform scale(1.2)
                

        &-item-text
            padding-top 3px
            max-width  0
            max-height 0
            transition max-width $time-long, max-height $time-long
            overflow hidden
            white-space nowrap
