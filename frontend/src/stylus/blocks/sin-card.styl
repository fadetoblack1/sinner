.sin-card
    position relative
    display flex
    flex-direction column
    border 1px solid $brand-primary
    min-height calc(100% - 15px)
    margin-bottom 15px
    padding 50px 15px 100px 15px
    background-color #000
    color #fff
    text-decoration none

    &::before
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        z-index 100
        content ''
        opacity 0
        box-shadow inset 0 0 3px 3px $brand-primary
        transition opacity $time-md
        pointer-events none


    &:hover,
    &:focus
        color #fff
        text-decoration none

        &::before
            opacity 1

        .sin-card__circle-info
            height 100px

        .sin-card__circle
            opacity 1
            transform translateY(0)

    &__circle-info
        position absolute
        right 0
        bottom 0
        left 0
        height 70px
        content ''
        background-repeat no-repeat
        background-size cover
        transition height $time-md

        &::before
            position absolute
            top 0
            right 0
            bottom 0
            left 0
            z-index 10
            content ''
            background linear-gradient(to bottom, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, .2) 100%)


    &__date
        position absolute
        top 10px
        left -2px
        z-index 100
        display flex
        flex-direction column
        padding 5px
        background-color #333
        font-size 12px
        color #fff

    &__circle
        position absolute
        bottom 0
        left 5px
        z-index 100
        padding 5px
        font-weight 700
        font-size 26px
        transform translateY(50%)
        opacity 0
        transition transform $time-md, opacity $time-md

        &--1,
        &--2,
        &--3
            color #e8aeab

        &--4,
        &--5,
        &--6
            color #d04942
            
        &--7,
        &--8,
        &--9
            color $brand-primary

    &__title
        font-size 16px
        text-transform uppercase

    &__additional
        font-size 14px

    &--1
        .sin-card__circle-info
            background-image url('../images/circle/short/1.jpg')

    &--2
        .sin-card__circle-info
            background-image url('../images/circle/short/2.jpg')

    &--3
        .sin-card__circle-info
            background-image url('../images/circle/short/3.jpg')

    &--4
        .sin-card__circle-info
            background-image url('../images/circle/short/4.jpg')

    &--5
        .sin-card__circle-info
            background-image url('../images/circle/short/5.jpg')

    &--6
        .sin-card__circle-info
            background-image url('../images/circle/short/6.jpg')

    &--7
        .sin-card__circle-info
            background-image url('../images/circle/short/7.jpg')

    &--8
        .sin-card__circle-info
            background-image url('../images/circle/short/8.jpg')

    &--9
        .sin-card__circle-info
            background-image url('../images/circle/short/9.jpg')
